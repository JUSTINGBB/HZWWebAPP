@{
}
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    统计分析
                </div>
                <div class="card-body">
                    <ul>
                        <li><a href="#">规划监督调查总体情况</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div id="EchartsDiv" style="height: 600px"></div>
        </div>
    </div>

    @section Scripts{ 
        <script>
            chartsMaker();
            function chartsMaker() {
                var dom = document.getElementById("EchartsDiv");
                var myChart = echarts.init(dom);
                var app = {};
                option = null;
                option = {
                    title: {
                        text: '规划监督调查总体情况',
                        subtext: '测试',
                        x: 'center'
                    },
                    tooltip: {
                        trigger: 'item',
                        formatter: "{a} <br/>{b} : {c} ({d}%)"
                    },
                    legend: {
                        orient: 'vertical',
                        left: 'left',
                        data: ['未施工现场检查', '施工现场检查一次', '施工现场检查二次']
                    },
                    series: [
                        {
                            name: '数量',
                            type: 'pie',
                            radius: '55%',
                            center: ['50%', '60%'],
                            data: [
                                { value: 15, name: '未施工现场检查' },
                                { value: 20, name: '施工现场检查一次' },
                                { value: 30, name: '施工现场检查二次' },
                            ],
                            itemStyle: {
                                emphasis: {
                                    shadowBlur: 10,
                                    shadowOffsetX: 0,
                                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                                }
                            }
                        }
                    ]
                };
                ;
                if (option && typeof option === "object") {
                    myChart.setOption(option, true);
                }
            }
        </script>
    }