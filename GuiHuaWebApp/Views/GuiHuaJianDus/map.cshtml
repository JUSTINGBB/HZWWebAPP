@*<p>地图</p>*@

<div id="chart_map" style="width:100%;height:610px;"></div>

@section Scripts{
    <style>
        #chart_map {
            background-color: #f0f8ff;
            height: 100%;
        }
    </style>
    <script src="~/js/hzw.js"></script>

    <script>
        echart_map();
        function echart_map() {
            var myChart = echarts.init(document.getElementById('chart_map'));
            var mapName = "hzw";
            option = {
                geo: {
                    name: "宁波杭州湾新区",
                    map: mapName,
                    show: true,
                    roam: true,//scale,move,true/false
                    //center:[],
                    /*aspectScale:number,
                    [ default: 0.75 ]
                    这个参数用于 scale 地图的长宽比。
                    最终的 aspect 的计算方式是：geoBoundingRect.width / geoBoundingRect.height * aspectScale
                    */
                    itemStyle: {
                        label: {
                            show: true,
                        },
                        borderColor: 'rgba(222, 0, 0, 1)',
                        borderWidth: 1,
                        areaColor: {
                            type: 'radial',
                            x: 0.5,
                            y: 0.5,
                            r: 0.8,
                            colorStops: [{
                                offset: 0,
                                color: 'rgba(175,238,0, 0)' // 0% 处的颜色
                            }, {
                                offset: 1,
                                color: 'rgba(47,79,79, .1)' // 100% 处的颜色
                            }],
                            globalCoord: false // 缺省为 false
                        },
                        shadowColor: 'rgba(128, 217, 0, 1)',
                        // shadowColor: 'rgba(255, 255, 255, 1)',
                        shadowOffsetX: -5,
                        shadowOffsetY: 5,
                        shadowBlur: 5
                    },
                    emphasis: {
                        itemStyle: {
                            areaColor: '#389BB7',
                            borderWidth: 0
                        }
                    }
                }
            }
            myChart.setOption(option);
            window.addEventListener("resize", function () {
                myChart.resize();
            });
        }
    </script>
}